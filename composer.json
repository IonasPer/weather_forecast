{
    "require": {
        "squizlabs/php_codesniffer": "~3.0",
        "slevomat/coding-standard": "~4.0"
    },
    "scripts": {
        "check-style": "phpcs -p --standard=ruleset.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 index.php tests",
        "fix-style": "phpcbf -p --standard=ruleset.xml --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1  index.php tests"
    }
}
